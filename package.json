    "@types/lodash": "^4.14.168",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^15.6.1",
    "concurrently": "^6.0.0",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^6.9.6",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3"
  },
  "dependencies": {
    "@types/koa-bodyparser": "^4.3.0",
    "amala": "^5.1.2",
    "axios": "^0.21.1",
