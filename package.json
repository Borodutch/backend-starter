    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.14.5",
    "concurrently": "^5.3.0",
    "jest": "^26.6.1",
    "mongodb-memory-server": "^6.9.3",
    "nodemon": "^2.0.6",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.3"
  },
  "dependencies": {
    "@types/koa-bodyparser": "^4.3.0",
    "axios": "^0.21.1",
    "class-validator": "^0.12.2",
